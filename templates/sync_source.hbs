<h3>
  {{source.name}}
  {{#if view.hasHeaderInformation}}
    <span>
      {{#if view.hasTotalItems}}
        {{view.totalItemsSynced}} out of {{view.totalItemsAvailable}} pieces of content backed up
        ({{view.percentageItemsSynced}})
      {{/if}} 
      &middot;
      {{#if view.lastCompletedSyncTimestamp}}
        Last Completed Backup: {{view.lastCompletedSyncTimestamp}}
      {{/if}}
    </span>
  {{/if}}
</h3>
<div class="bar-base">
  {{#each contentType in source.contentTypes}}
    {{view App.SyncSourceContentTypeBarView contentTypeBinding="contentType"}}
  {{/each}}
</div>
<ul class="legends">
  {{#each contentType in source.contentTypes}}
    {{view App.SyncSourceContentTypeLegendView contentTypeBinding="contentType"}}
  {{/each}}
</ul>
<hr />